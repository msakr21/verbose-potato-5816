<h1> Customer: <%= @customer.name %> </h1>
<h2> Items: </h2>
<% @customer_items.each do |item|%>
  <%= "Name: #{item.name}, Price: $#{item.price}, Supermarket: #{item.supermarket.name}" %><br>
<%end%>
<%= form_with url: "/customers/#{@customer.id}/items", method: :patch, local: true do |f| %>
  <%= f.label :item_id %>
  <%= f.text_field :item_id %>
  <%= f.submit "Submit" %>
<% end %>